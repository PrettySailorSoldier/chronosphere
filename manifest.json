{
    "manifest_version": 3,
    "name": "Chrono Sphere",
    "version": "1.0",
    "description": "A holographic productivity timer with multiple modes",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "alarms",
        "offscreen",
        "notifications"
    ],
    "commands": {
        "start-pomodoro": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Start a Pomodoro Timer"
        },
        "start-break": {
            "suggested_key": {
                "default": "Ctrl+Shift+B",
                "mac": "Command+Shift+B"
            },
            "description": "Start a Short Break"
        },
        "pause-resume": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Pause/Resume Timer"
        }
    }
}